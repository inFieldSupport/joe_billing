<tr class="whitespace-nowrap text-gray-500" id="<%= dom_id service %>">
  <td class="px-6 py-4 text-sm">
    <%= service.service_type.name %>
  </td>
  <td class="px-6 py-4 text-sm">
    <div id="services<%= service.id %>"><%= service.active_users %></div>
    <%= render "services/active_users_form", service: service %>
  </td>
  <td class="px-6 py-4 text-sm">
    <div id="service<%= service.id %>"><%= service.rate %></div>
    <%= render "services/rate_form", service: service %>
  </td>
  <td class="px-6 py-4 text-sm">
    <%= (service.active_users * service.rate).round(2) %> 
  </td>
</tr>

<script>
    var f = document.querySelector('#service<%= service.id %>').addEventListener('click', function(event) {
      var rate_form = document.querySelector('#rate_form<%= service.id %>');
      rate_form.classList.remove("hidden");
      rate_form.classList.add("flex");
      this.classList.add("hidden");
    });
</script>
<script>
    var f = document.querySelector('#services<%= service.id %>').addEventListener('click', function(event) {
      var rate_form = document.querySelector('#active_users_form<%= service.id %>');
      rate_form.classList.remove("hidden");
      rate_form.classList.add("flex");
      this.classList.add("hidden");
    });
</script>