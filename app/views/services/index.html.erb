<!-- component -->
<div class="flex flex-row min-h-screen w-full bg-gray-100 text-gray-800">
    <%= render "layouts/header" %>

    <main class="main flex flex-col flex-grow -ml-64 md:ml-0 transition-all duration-150 ease-in h-screen overflow-auto">
      <div class="main-content flex flex-col flex-grow p-4">
        <div class="flex justify-center">
          <h1 class="font-bold text-2xl text-black my-auto">Services</h1>
        </div>

        <div class="flex flex-col flex-grow border-4 border-gray-400 border-dashed bg-white rounded mt-4 p-5">
            <%= link_to "< Back", :back, class:"w-16 mb-5 py-1 px-1 rounded-lg bg-gray-500 text-white text-center inline-block font-medium cursor-pointer" %>

          <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
              <table class="w-full text-sm text-left text-blue-100 dark:text-blue-100">
                  <thead class="text-xs uppercase text-orange-400 bg-blue-600 border-b border-blue-400">
                      <tr>
                          <th scope="col" class="px-6 py-3">
                            Client
                          </th>
                          <th scope="col" class="px-6 py-3">
                            Active Users
                          </th>
                          <th scope="col" class="px-6 py-3">
                            Rate
                          </th>
                          <th scope="col" class="px-6 py-3">
                            Total
                          </th>
                      </tr>
                  </thead>
                  <tbody id="services">
                    <%= render @services %>
                    <tr class="bg-blue-600">
                        <td colspan="5"></td>
                    </tr>
                    <tr class="whitespace-nowrap">
                        <td colspan="2">
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            Sub Total :  
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= @sub_total %>$ 
                        </td>
                    </tr>
                    <tr class="whitespace-nowrap">
                        <td colspan="2">
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            Tax : 
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= @tax %>% 
                        </td>
                    </tr>
                    <tr class="whitespace-nowrap">
                        <td colspan="2">
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            Total :  
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= @total %>$ 
                        </td>
                    </tr>
                  </tbody>
              </table>
            </div>


            <div class="flex justify-end">
                <%= link_to "Send", client_send_mail_path(client: @client.id), class:"bg-green-500 m-5 py-2 px-4 rounded-lg" %>
            </div>
        </div>
      </div>
    </main>
  </div>